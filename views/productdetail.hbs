<style>
 .card {
    width: 444px
}

body {
    background: #eee
}



</style>
<div class="d-flex justify-content-center container mt-5">
    <div class="card p-3 bg-white"><i class="fa fa-apple"></i>
        <div class="about-product text-center mt-2"><img src="data:image/{{data.img.contentType}};base64,
                     {{data.datastring}}" width="300">
            <div>
                <h4>{{data.manufacturer}} {{data.model}}</h4>
                <h6 class="mt-0 text-black-50">{{data.category}}</h6>
            </div>
        </div>
        <div class="stats mt-2">
            <div class="d-flex justify-content-between p-price"><span>Security deposit</span><span>Rs. {{data.security}}</span></div>
            <div class="d-flex justify-content-between p-price"><span>Base price</span><span>Rs. {{data.baseprice}}</span></div>
            <div class="d-flex justify-content-between p-price"><span>Price per hour</span><span>Rs. {{data.pph}}</span></div>
            <div class="d-flex justify-content-between p-price"><span>Registration Number</span><span>{{data.carlicensenumber}}</span></div>
            
        </div>
        <div class="d-flex justify-content-between total font-weight-bold mt-4"><span>{{#if login}}
                        <button type="submit" class="btn btn-success" data-toggle="modal"
                            data-target="#{{@index}}Modal">Book </button>

                            {{else}}
                            <form method="get" action="/user/signin">
                      <button type="submit" class="btn btn-danger">Login to book</button></form>
                            {{/if}}</span><span><a href="/" class="btn btn-info" role="button">Back</a></span></div>
    </div>
</div>

<div class="modal fade" id="{{@index}}Modal" role="dialog" aria-labelledby="modalLabel" tabindex="-1">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalLabel">Book your ride!</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body" style="height: 1000px;">
              <form method="post" action="/cars/book/{{data._id}}">
                    
