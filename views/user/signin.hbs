<div class="row centered mt-4">
  <div class="col-md-4 col-md-offset-4 mx-auto">
    <h1>Signin</h1>
    {{#if hasError}}
    <div class="alert alert-danger">
        {{#each messages}}
        <p>{{this}}</p>
        {{/each}}
      </div>
    {{/if}}
    <form method="post" action="/user/signin">
    <div class="form-group">
      <label for="inputmobile">Mobile Number</label>
      <input type="mobile" class="form-control" id="mobile" name="mobile" aria-describedby="mobilehelp" placeholder="Enter mobile number">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input type="password" id ="password" name ="password" class="form-control" placeholder="Password">
    </div>
    <input type="hidden" name="_csrf" value="{{csurfToken}}">
    <div class="form-check">
      <label class="form-check-label">
        <input type="checkbox" class="form-check-input">
        Check me out
      </label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  </div>
</div>