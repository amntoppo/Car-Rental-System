<div class="row centered mt-4">
  <div class="col-md-4 col-md-offset-4 mx-auto">
    <h1>Edit profile</h1>
    
    <form method="post" action="/user/updateprofile">
    <div class="form-group">
      <label for="signupMobileNumber">Mobile</label>
      <input type="mobile" class="form-control" id="mobile" name="mobile" aria-describedby="mobileHelp" placeholder="Enter Mobile number">
    </div>
    
    
    <div class="form-group">
      <label for="signupMobileNumber">Name</label>
      <input type="name" class="form-control" id="name" name="name" aria-describedby="nameleHelp" placeholder="Enter Name">
      
    </div>
    <input type="hidden" name="_csrf" value="{{csurfToken}}">
    <div class="form-group">
      <label for="signUpLicense">License Number</label>
      <input type="license" class="form-control" id="license" name="license" aria-describedby="licenseeHelp" placeholder="Enter License number">
      
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  </div>
    </div>