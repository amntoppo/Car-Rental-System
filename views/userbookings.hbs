{{#if isadmin}}
<div class="row mt-4">
    <div class="col-md-15 col-md-offset-1 mx-auto">
        {{#if nobookings}}
        
        <div class="alert alert-danger">
            
            <p>No user has booked this car yet</p>
            
        </div>
        {{else}}
        <center>
        <table class="table table-hover table-striped table-dark table-hover">
            <thead>
                <tr>
                    {{!-- <th scope="col" class="pl-5 pr-5">License Number</th> --}}
                    <th scope="col"class="pl-3 pr-5">Car Model</th>
                    <th scope="col"class="pl-3 pr-3">Chassis No.</th>
                    <th scope="col" class="pl-5 pr-5">From</th>
                    <th scope="col" class="pl-5 pr-5">To</th>
                     <th scope="col" class="pl-2 pr-2">Price</th>
                       <th scope="col" class="pl-5 pr-5">Status</th>
                       <th scope="col" class="pl-5 pr-5">Change Status</th>
                     


                </tr>
            </thead>
            <tbody>
                {{#each data}}
                
                <tr>
                    
                     <th scope="row"class="pl-5 pr-5">{{carid.manufacturer}} {{carid.model}}</th>
                     <td class="pl-5 pr-3">{{carid.chesis}}</td>
                    <td class="pl-5 pr-3">{{this.from}}</td>
                    <td class="pl-2 pr-3">{{this.to}}</td>
                    <td class="pl-2 pr-2"> {{this.totalprice}}</td>
                    {{#if this.active}}
                    <td class="pl-2 pr-2"> Active</td>
                    {{else}}
                            {{#if this.finished}}
                            <td class="pl-2 pr-2"> Finished</td>
                            {{else}}
                            <td class="pl-2 pr-2"> Cancelled</td>
                            {{/if}}

                    {{/if}}
                    <td>
                    <div class="dropdown">
                    <button class="dropbtn">Booking status</button>
                    <div class="dropdown-content">
                        <a href="/bookingstatus/active/{{this._id}}">active</a>
                        <a href="/bookingstatus/cancel/{{this._id}}">cancel</a>
                        <a href="/bookingstatus/finished/{{this._id}}">finished</a>
                    </div>
                    </div>
                    </td>
                    
                   
                    {{!-- --}}
                    <!-- Modal -->
<!-- Modal -->

  </div>
                   

                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/if}}
    </center>
    </div>
</div>
{{else}}
<div class="row mt-4">
    <div class="col-md-15 col-md-offset-1 mx-auto">
