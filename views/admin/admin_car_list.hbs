<div class="row mt-4">
    <div class="col-md-15 col-md-offset-1 mx-auto">
        <center>
        <table class="table table-hover table-striped table-dark table-hover">
            <thead>
                <tr>
                    <th scope="col" class="pl-2 pr-3">Registration Number</th>
                    <th scope="col"class="pl-2 pr-5">Car Model</th>
                    <th scope="col"class="pl-2 pr-5">Category</th>
                    <th scope="col"class="pl-2 pr-5">Chesis No.</th>
                    <th scope="col" class="pl-2 pr-3">Base Price</th>
                    <th scope="col" class="pl-2 pr-3">Hourly rate</th>
                     <th scope="col" class="pl-2 pr-2">Deposit</th>
                     <th scope="col" class="pl-2 pr-2">Remove</th>
                     {{!-- <th scope="col" class="pl-2 pr-0">Bookings</th> --}}


                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <th scope="row" class="pl-5 pr-5">{{this.carlicensenumber}}</th>
                     <th scope="row"class="pl-5 pr-5">{{this.manufacturer}} {{this.model}}</th>
                     <td class="pl-5 pr-2">{{this.category}}</td>
                    <td class="pl-5 pr-2">{{this.chesis}}</td>
                    <td class="pl-5 pr-3">{{this.baseprice}}</td>
                    <td class="pl-2 pr-3">{{this.pph}}</td>
                    <td class="pl-2 pr-2"> {{this.security}}</td>
                    <td>
                        <form method="get" action="/removecar/{{this._id}}">
                        <button type="submit" class="btn btn-failed" >X </button>
                        </form>
                    </td>
                    {{#if this.available}}
                        <td>
                        <form method="get" action="/toggleavailable/{{this._id}}">
                        <button type="submit" class="btn btn-success"> Set as unavailable</button>
                        </form>
                    </td>

                    {{else}}
                    <td>
                        <form method="get" action="/toggleavailable/{{this._id}}">
                        <button type="submit" class="btn btn-danger"> Set as available</button>
                        </form>
                    </td>
                    {{/if}}

                    <td><form method="get" action="/bookingdetails/{{this._id}}">
                    <td class="pl-2 pr-1"> <button type="submit" class="btn">-></button></td>
                    </form></td>
                    {{!-- --}}
                    <!-- Modal -->

                </tr>
                {{/each}}
            </tbody>
        </table>
    </center>
    </div>
</div>